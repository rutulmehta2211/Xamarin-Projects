<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CMO.CMVisits.EventsDetail"
             BackgroundColor="#09091a"
              Padding="10">

    <Grid VerticalOptions="FillAndExpand" BackgroundColor="#132561" Padding="5,5,5,5" >
		 <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="*" />
        </Grid.RowDefinitions>
		  <StackLayout Grid.Row="0" >
 			<Grid >
	  <Image x:Name="EventsDetailImageBackgrnd" Source="photogalleryplaceholder.png" Aspect="Fill"/>
      <Image x:Name="EventsDetailImage" Aspect="Fill"/>
    </Grid>
			<Label x:Name="EventsVisittitle" TextColor="White" FontAttributes="Bold"/>
			<StackLayout Orientation="Horizontal">
     	   		<Image Source="ico_calendar.png" />
      	   		<Label x:Name="EventsVisitDate" TextColor="White" />
 	     	</StackLayout>
          </StackLayout> 
          <StackLayout BackgroundColor="#132561" Padding="0,5,0,5"  VerticalOptions="FillAndExpand" Grid.Row="1" >
      		 <ScrollView>
      		  <StackLayout >
       		   <Label x:Name="EventsVisitDetail" TextColor="White" LineBreakMode="CharacterWrap"  />
       		</StackLayout>
   		   </ScrollView>
				
  		  </StackLayout>

    </Grid>
</ContentPage>