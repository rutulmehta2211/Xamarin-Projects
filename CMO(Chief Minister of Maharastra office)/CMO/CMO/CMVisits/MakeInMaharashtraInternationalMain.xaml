    <!--<StackLayout  HorizontalOptions="Center" VerticalOptions="StartAndExpand" >-->
    <Grid VerticalOptions="Fill" BackgroundColor="#09091a" >
      <Grid.RowDefinitions>
        <RowDefinition x:Name="firstrow" Height="Auto"/>
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

